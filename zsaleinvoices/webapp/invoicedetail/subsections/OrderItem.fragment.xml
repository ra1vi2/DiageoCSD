<core:FragmentDefinition xmlns:m="sap.m" xmlns:core="sap.ui.core" xmlns="sap.ui.table">
	<Table id="table1" rows="{/ProductCollection}" selectionMode="MultiToggle" visibleRowCount="7" ariaLabelledBy="title">
		<extension>
			<m:OverflowToolbar>
				<m:Title id="title" text="Order Item"/>
				<m:ToolbarSpacer/>
				<m:Button icon="sap-icon://my-sales-order" tooltip="Generate Sales Docket" press="onGenerateSalesDocket" text="Add"
					enabled="{= ${this>/selectedOrders}.length > 0}"/>
				<m:Button icon="sap-icon://my-sales-order" tooltip="Generate Sales Docket" press="onGenerateSalesDocket" text="Delete"
					enabled="{= ${this>/selectedOrders}.length > 0}"/>
			</m:OverflowToolbar>
		</extension>
		<columns>
			<Column width="11rem">
				<m:Label text="Ref No"/>
				<template>
					<m:Text text="{Name}" wrapping="false"/>
				</template>
			</Column>
			<Column width="11rem">
				<m:Label text="Material Code"/>
				<template>
					<m:Input value="{ProductId}"/>
				</template>
			</Column>
			<Column width="6rem" hAlign="End">
				<m:Label text="Material Description"/>
				<template>
					<m:Label text="{Quantity}"/>
					<m:Text text="{Name}" wrapping="false"/>
				</template>
			</Column>
			<Column width="9rem">
				<m:Label text="Brand"/>
				<template>
					<m:ObjectStatus text="{Status}" state="{ path: 'Available', formatter: '.formatAvailableToObjectState' }"/>
				</template>
			</Column>
			<Column width="9rem">
				<m:Label text="Pack"/>
				<template>
					<m:Text text="{Name}" wrapping="false"/>
				</template>
			</Column>
			<Column width="12rem">
				<m:Label text="Actual Quantity"/>
				<template>
					<m:ComboBox value="{SupplierName}" items="{/Suppliers}">
						<core:Item text="{Name}"/>
					</m:ComboBox>
				</template>
			</Column>
			<Column width="12rem">
				<m:Label text="Quantity"/>
				<template>
					<m:ComboBox value="{SupplierName}" items="{/Suppliers}">
						<core:Item text="{Name}"/>
					</m:ComboBox>
				</template>
			</Column>
			<Column width="12rem">
				<m:Label text="Balance Quantity"/>
				<template>
					<m:ComboBox value="{SupplierName}" items="{/Suppliers}">
						<core:Item text="{Name}"/>
					</m:ComboBox>
				</template>
			</Column>
			<Column width="12rem">
				<m:Label text="UOM"/>
				<template>
					<m:ComboBox value="{SupplierName}" items="{/Suppliers}">
						<core:Item text="{Name}"/>
					</m:ComboBox>
				</template>
			</Column>
			<Column width="12rem">
				<m:Label text="Release Quantity"/>
				<template>
					<m:ComboBox value="{SupplierName}" items="{/Suppliers}">
						<core:Item text="{Name}"/>
					</m:ComboBox>
				</template>
			</Column>
		</columns>
		<rowActionTemplate>
			<RowAction id="idOrderTableRowAction">
				<items>
					<RowActionItem id="idOrderTableRowActionItem" type="Navigation" press="onPressEditOrder"></RowActionItem>
				</items>
			</RowAction>
		</rowActionTemplate>
	</Table>
</core:FragmentDefinition>